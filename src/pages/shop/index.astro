---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/common/PageHeader.astro';
import SearchBar from '../../components/common/SearchBar.astro';

---

<Layout title="Shop">
  <div class="pt-24 pb-12">
    <PageHeader
      title="Shop"
      description="Browse my handmade creations and digital products"
    />
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row gap-8">
        <aside class="w-full md:w-64">
          <SearchBar />
          <div class="bg-white rounded-lg shadow-sm p-6 mt-6">
            <h2 class="font-serif text-xl text-gray-800 mb-4">Categories</h2>
            <ul class="space-y-2">
              {['Crochet Patterns', 'Digital Planners', 'Printables', 'Handmade Items'].map(category => (
                <li>
                  <a href={`/shop/category/${category.toLowerCase()}`} class="text-gray-600 hover:text-primary transition-colors">
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </aside>
        
        <main class="flex-1">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {/* Product grid will go here */}
          </div>
        </main>
      </div>
    </div>
  </div>
</Layout>