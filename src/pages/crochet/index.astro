---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/common/PageHeader.astro';
import ProjectCard from '../../components/ProjectCard.astro';

const projects = [
  { id: 1, title: "Cozy Blanket", image: "/crochets/c1.jpg", category: "Accessories" },
  { id: 2, title: "Amigurumi Bear", image: "/crochets/c2.jpg", category: "Amigurumi" },
  { id: 3, title: "Cute Crochet Frogs", image: "/crochets/c3.jpg", category: "Amigurumi" },
  { id: 4, title: "Crochet Star Garland", image: "/crochets/c4.jpg", category: "Home Decor" },
  { id: 5, title: "Cinnamoroll Amigurumi Pattern", image: "/crochets/c5.jpg", category: "Amigurumi" },
  { id: 6, title: "Little Peacock Amigurumi", image: "/crochets/c6.jpg", category: "Amigurumi" },
];
---

<Layout title="Crochet Projects">
  <div class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <PageHeader
        title="Crochet Projects"
        description="My own handmade creations and crochet patterns. Stay tuned for more!"
      />
      
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div id={`project-${project.id}`}>
            <ProjectCard
              title={project.title}
              image={project.image}
              category={project.category}
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>

