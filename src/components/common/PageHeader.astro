---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="bg-softGray">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="font-serif text-4xl md:text-5xl text-gray-800 mb-4 text-center">
      {title}
    </h1>
    <p class="text-xl text-gray-600 text-center max-w-2xl mx-auto">
      {description}
    </p>
  </div>
</div>