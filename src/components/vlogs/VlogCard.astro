---
interface Props {
  vlog: {
    id: string;
    title: string;
    thumbnail: string;
    duration: string;
    views: number;
    date: string;
    category: string;
  };
}

const { vlog } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm overflow-hidden group">
  <div class="relative">
    <img
      src={vlog.thumbnail}
      alt={vlog.title}
      class="w-full aspect-video object-cover group-hover:scale-105 transition-transform duration-300"
    />
    <span class="absolute bottom-2 right-2 bg-black/75 text-white px-2 py-1 rounded text-sm">
      {vlog.duration}
    </span>
  </div>
  
  <div class="p-4">
    <h3 class="font-serif text-lg text-gray-800 mb-2 line-clamp-2">
      <a href={`/vlogs/${vlog.id}`} class="hover:text-primary transition-colors">
        {vlog.title}
      </a>
    </h3>
    
    <div class="flex items-center justify-between text-sm text-gray-600">
      <span>{vlog.views.toLocaleString()} views</span>
      <span>{new Date(vlog.date).toLocaleDateString()}</span>
    </div>
    
    <a
      href={`/vlogs/category/${vlog.category}`}
      class="inline-block mt-3 text-sm text-primary hover:text-secondary transition-colors"
    >
      {vlog.category}
    </a>
  </div>
</article>