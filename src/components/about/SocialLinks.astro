<style>
  .social-icon {
    opacity: 0;
    animation: popIn 0.5s ease-out forwards;
  }

  @keyframes popIn {
    from {
      opacity: 0;
      transform: scale(0.8) translateY(10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
</style>