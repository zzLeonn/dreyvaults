---
import { Swiper, SwiperSlide } from 'swiper/react';
import 'swiper/css';
import 'swiper/css/pagination';
---

<section id="featured" class="py-20 bg-softGray">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="font-serif text-4xl text-center text-gray-800 mb-12">Featured Content</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img
          src="/public/img/playlist.jpg"
          alt="Music Playlist"
          class="w-full h-48 object-cover"
        />
        <div class="p-6">
          <h3 class="font-serif text-xl text-gray-800 mb-2">Latest Playlist</h3>
          <p class="text-gray-600">Discover my current favorite tunes and musical inspirations.</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img
          src="/public/img/book.jpg"
          alt="Book Review"
          class="w-full h-48 object-cover"
        />
        <div class="p-6">
          <h3 class="font-serif text-xl text-gray-800 mb-2">Recent Reads</h3>
          <p class="text-gray-600">Explore my latest book recommendations and reviews.</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img
          src="/public/img/crochet2.jpg"
          alt="Crochet Project"
          class="w-full h-48 object-cover"
        />
        <div class="p-6">
          <h3 class="font-serif text-xl text-gray-800 mb-2">Crochet Creation</h3>
          <p class="text-gray-600">Check out my newest crochet projects and patterns.</p>
        </div>
      </div>
    </div>
  </div>
</section>