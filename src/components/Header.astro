---
const navItems = [
  { href: '/vlogs', label: 'Vlogs' },
  { href: '/music', label: 'Music Corner' },
  { href: '/books', label: 'Book Nook' },
  { href: '/crochet', label: 'Crochet Projects' },
  { href: '/gallery', label: 'Photo Gallery' },
  { href: '/shop', label: 'Shop' },
  { href: '/about', label: 'About' },
];
---

<header class="fixed w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-2xl font-serif text-secondary hover:text-primary transition-colors">
        Drey's Vault
      </a>
      
      <nav class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-gray-600 hover:text-primary transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <button
        class="md:hidden text-gray-600 hover:text-primary"
        aria-label="Menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>