---
export interface Props {
  title: string;
  image: string;
  category: string;
}

const { title, image, category } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:scale-105">
  <img src={image} alt={title} class="w-full h-64 object-cover" />
  <div class="p-4">
    <h3 class="font-serif text-xl text-gray-800 mb-2">{title}</h3>
    <p class="text-sm text-gray-600">{category}</p>
  </div>
</div>

